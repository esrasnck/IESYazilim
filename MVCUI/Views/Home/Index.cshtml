@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">

    <div class="col-md-4" style="float:right">
        <a class="w-100 btn btn-dark" type="button" style="color:#77d0d9" asp-controller="auth" asp-action="Register">
        Kullanıcı Kayıt sayfasına git </a>
    </div>
    <br />
    <br />
    <h1 class="alert-success">JSON Veriyi tabloda gösterme işlemi</h1>

</div>

<div class="col-md-12">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Avatar</th>
            </tr>
        </thead>
        <tbody id="tab1">
        </tbody>
    </table>
    <br />
    <br />

</div>

<script>

    $(document).ready(function () {
        $.ajax({
            url: "https://reqres.in/api/users?page=2",
            type: "Get",
            success: function (response) {
                console.log(response.data)
                var trHtml = ''
                $.each(response.data, function (i, item) {
                    trHtml += '<tr><td>' + item.id + '</th><td>' + item.email + '</td><td>' + item.first_name + '</td ><td>' + item.last_name + '</td><td> <img src="' + item.avatar + '"></td></tr>';
                });
                $('#tab1').append(trHtml);
            }

        });
    })

</script>
